<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@using shopthoitrang.Models
<body>
    <header class="row bg-light">
        <div class="col-md-1 d-flex logo">
            <a href="/Home/TrangChu">
                <img src="~/Content/Images/icon/Logo.png" alt="Logo Canifa" width="80" height="80" />
            </a>
        </div>
        <div class="col-md-8 d-flex">
            <ul class="nav">
                <li class="nav_dropdown">
                    <div class="dropdown">
                        <button class="dropdownbtn nav-link text-bold">
                            DANH MỤC SP
                        </button>
                        @Html.Action("HTLoaiHang", "Home")
                    </div>
                </li>
                <li>
                    <a href="/Home/LienHe" class="nav-link text-dark text-bold">Liên hệ</a>
                </li>
                <li>
                    <a href="/Home/LichSuMuaHang" class="nav-link text-dark text-bold">Lịch sử mua hàng</a>
                </li>
                @if (Session["khachhang"] == null)
                {
                    <li>
                        <a href="/Home/DangKy" class="nav-link text-dark text-bold">Đăng ký</a>
                    </li>
                    <li>
                        <a href="/Home/DangNhap" class="nav-link text-dark text-bold">Đăng nhập</a>
                    </li>
                }
                <li>
                    <a href="/Home/HTGioHang" class="nav-link text-dark text-bold">
                        <img src="~/Content/Images/carts.png" width="15" height="15" />
                        Giỏ hàng
                        (
                        @{
                            GioHang g = Session["gio"] as GioHang;
                            if (g != null)
                            {
                                <span>@g.SoMatHang()</span>
                            }
                            else
                            {
                                <span>0</span>
                            }
                        }
                        )<br />
                    </a>
                </li>
                @{
                    if (Session["khachhang"] != null)
                    {
                        var k = Session["khachhang"] as Khachhang;
                        <li class="text-white">
                            <img src="~/Content/Images/profile.png" width="20" height="20" />
                            Chào bạn, @k.Hoten
                        </li>
                        <li>
                            <a href="/Home/DangXuat" class="nav-link text-white">
                                <img src="~/Content/Images/off.png" width="20" height="20" />
                                Đăng xuất
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="col-md-3 col-3 d-flex">
            <form action="/Home/XuLyTK" id="cover" method="post">
                <div class="form-search input-group">
                    <input type="search" class="search__textbox" name="txtSearch" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                    <button class="search__button">
                        <img src="~/Content/Images/icon/icons_search.svg" alt="Logo search" width="20px" height="20px" />
                    </button>
                </div>
            </form>
        </div>
    </header>

    <div class="container" style="clear:both">
            @RenderBody()
    </div>
    <footer class="row footer bg-dark">
        <div class="col-md-4">
            <table class="table-sm">
                <tr class="footer_menu">
                    <td class="footer_menu">CÔNG TY CỔ PHẦN CANIFA</td>
                </tr>
                <tr>
                    <td>Địa chỉ cửa hàng: 140 Lê Trọng Tấn, Tân Phú, TP.HCM</td>
                </tr>
                <tr>
                    <td> Email: canifa@gmail.com</td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <table class="table-sm">
                <tr class="footer_menu">
                    <td>THƯƠNG HIỆU</td>
                </tr>
                <tr>
                    <td>
                        <a href="#">Giới thiệu</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="/Home/LienHe">Liên hệ</a>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <table class="table-sm">
                <tr class="footer_menu">
                    <td>MẠNG XÃ HỘI</td>
                </tr>
                <tr>
                    <td>
                        <ul>
                            <li><a href="#"> <img src="~/Content/Images/icon/icons8_Facebook.svg" class="footer__logo" alt="Facebook logo" /> </a></li>
                            <li><a href="#"> <img src="~/Content/Images/icon/icons8_YouTube.svg" class="footer__logo" alt="Youtube logo" /> </a></li>
                            <li><a href="#"> <img src="~/Content/Images/icon/icons8_Zalo_1.svg" class="footer__logo" alt="Zalo logo" /> </a></li>
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/Content/css/cssLayout.css" rel="stylesheet" />
    <link href="~/Content/css/cssReset.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</body>
</html>
